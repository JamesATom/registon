{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "target": "ES2021",
        "esModuleInterop": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "strict": false,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "src/database"]
}
