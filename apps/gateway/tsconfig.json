{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2021",
		"esModuleInterop": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": false,
		"noImplicitAny": false,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": false,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/database"]
}